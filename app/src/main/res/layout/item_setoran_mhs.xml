<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_marginBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="3dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hal_setoran_mhs"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="6.5"
                android:gravity="center"
                android:padding="10dp"
                android:text="00"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/awalan_setoran_mhs"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="4.5"
                android:layout_marginStart="10dp"
                android:gravity="right|center"
                android:padding="10dp"
                android:fontFamily="@font/trado"
                android:text="بسم الله الرحمن الرحيم"
                android:textSize="20sp"
                android:textColor="@color/black"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/tv_nilai_setoran_mhs"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="6.5"
                android:gravity="center"
                android:padding="10dp"
                android:text="00"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_tgl_setoran_mhs"
                android:layout_marginEnd="10dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="5.5"
                android:gravity="right|center"

                android:text="05:14:34 26-06-2022"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="6"
                android:gravity="right"
                android:paddingEnd="10dp"
                android:paddingVertical="10dp"
                android:text="000"
                android:textColor="@color/black" >
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_delete_setoran"
                    android:layout_width="52dp"
                    android:layout_height="25dp"
                    android:text="Delete"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/background_tombol_keluar"
                    android:textSize="9sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>






        </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ket_setoran_mhs"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="--"
                    android:textColor="@color/black" />


            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>



</androidx.appcompat.widget.LinearLayoutCompat>

