<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.detail.DetailKitabActivity">

    <ScrollView
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        tools:ignore="ScrollView" >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:background="@drawable/background_keterangan_setoran"
        android:orientation="horizontal">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingHorizontal="15dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="#FFBD17"
                android:textSize="15dp"
                android:background="@drawable/background_text_ket_kitab_isi"
                android:text="Halaman"/>
            <TextView
                android:id="@+id/id_halaman_kitab_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="50dp"
                android:background="@drawable/background_text_ket_kitab"
                android:text="55"/>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingHorizontal="15dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_gravity="right"
                android:background="@drawable/background_text_ket_kitab"
                android:text="Bab"/>
            <TextView
                android:id="@+id/tv_bab_kitab_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingHorizontal="15dp"
                android:layout_marginTop="5dp"
                android:gravity="center|right"
                android:textStyle="bold"
                android:textColor="#FFBD17"
                android:textSize="18dp"
                android:background="@drawable/background_text_ket_kitab_isi"
                android:text="كتاب أحكام الصيد والذبائح والأطعمة"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:layout_gravity="right"
                android:background="@drawable/background_text_ket_kitab"
                android:text="Fashol"/>
            <TextView
                android:id="@+id/tv_fashol_kitab_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:paddingVertical="5dp"
                android:paddingHorizontal="15dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="#FFBD17"
                android:textSize="18dp"
                android:background="@drawable/background_text_ket_kitab_isi"
                android:text="فصل: في قسم الفيء على مستحقيه "/>


        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingBottom="20dp"
        android:paddingTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/background_keterangan_setoran"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:paddingHorizontal="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:background="@drawable/background_text_ket_kitab"
            android:text="Kalimat"/>
        <TextView
            android:id="@+id/tv_isi_kitab_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="5dp"
            android:paddingHorizontal="15dp"
            android:layout_marginTop="5dp"
            android:gravity="center|right"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="@font/trado"
            android:background="@drawable/background_isi_kalimat"
            android:text="Kalimat"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"
        android:layout_margin="20dp"
        android:background="@drawable/background_keterangan_setoran"
        android:orientation="horizontal">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingHorizontal="15dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="#FFBD17"
                android:textSize="15dp"
                android:background="@drawable/background_text_ket_kitab_isi"
                android:text="Nilai"/>
            <Spinner
                android:id="@+id/sp_Nilai"
                android:entries="@array/nilai"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                style="@style/Widget.AppCompat.Spinner.DropDown"
                android:textSize="50dp"
                android:background="@drawable/background_text_ket_kitab"
                android:text="55"/>


        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingHorizontal="15dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:background="@drawable/background_text_ket_kitab"
                android:text="Keterangan"/>

            <EditText
                android:id="@+id/id_keterangan"
                android:hint="Silahkan isi keterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingHorizontal="15dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="#955901"
                android:textSize="18dp"
                android:background="@drawable/background_text_ket_kitab_isi"
                android:text=""/>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <Button
        android:id="@+id/id_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:background="@drawable/background_tombol"
        android:text="Setorkan" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>