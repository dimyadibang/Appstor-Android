<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mahadalynj.appstor">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/appstorlauncer"
        android:label="@string/app_name"
        android:roundIcon="@drawable/appstorlauncer"
        android:supportsRtl="true"
        android:theme="@style/Theme.Appstor"
        tools:targetApi="31">
        <activity
            android:name=".ui.main.ProfileActivity"
            android:windowSoftInputMode="adjustResize"
            android:exported="false" />
        <activity
            android:name=".ui.splashscreen.SplashScreen"
            android:exported="true"
            android:theme="@style/SplashscreenThema.">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>

        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"/>

        <activity
            android:name=".ui.detail.DetailKitabActivity"
            android:exported="false" />
        <activity
            android:name=".ui.detail.DetailMhsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.detail.DetailUstActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.ListMhsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.ListUstActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.ListKitabActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>